@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <Dropdown>
                        <Overlay>
                            <Menu>
                                <MenuItem>
                                    <Button Type="ButtonType.Link" OnClick="Logout">Logout</Button>                
                                </MenuItem>
                            </Menu>
                        </Overlay>
                        <ChildContent>
                            <a class="any-dropdown-link" @onclick:preventDefault>
                                @context.User.Identity.Name
                            </a>
                        </ChildContent>
                    </Dropdown>
                </Authorized>
                <NotAuthorized>
                    <Button Type="ButtonType.Link" OnClick="Login">Login</Button>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    [CascadingParameter] HttpContext _httpContext { get; set; } = default!;

    private void Login()
    {
        NavigationManager.NavigateTo("/Account/Login",true);
    }
    private void Logout()
    {
        NavigationManager.NavigateTo("/Account/Logout",true);
    }
}
